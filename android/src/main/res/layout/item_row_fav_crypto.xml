<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="6dp"
        android:elevation="@dimen/cardview_default_radius">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        <LinearLayout
            android:id="@+id/ly_pref_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorRed">

            <TextView
                android:id="@+id/tv_cripto_title"
                style="@style/TextAppearance.AppCompat.Button"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ripple (XRP)"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:gravity="center_vertical"
                android:layout_below="@+id/ly_pref_header"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_monetization_on_black_24dp"
                    style="@style/CardView.TextStyle"
                    />

                <TextView
                    android:id="@+id/tv_cripto_usd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD: 3.59"
                    android:padding="6dp"
                    style="@style/CardView.TextStyle"
                    />

                <TextView
                    android:id="@+id/tv_cripto_eur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EUR: 2.98"
                    android:padding="6dp"
                    style="@style/CardView.TextStyle"
                    />


                <TextView
                    android:id="@+id/tv_cripto_btc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC: 0.00024452"
                    android:padding="6dp"
                    style="@style/CardView.TextStyle"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/linear_price"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_show_chart_black_24dp"
                    />
                <TextView
                    android:id="@+id/tv_cripto_1h"
                    style="@style/CardView.TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1h: -1.87"
                    android:padding="6dp"/>

                <TextView
                    android:id="@+id/tv_cripto_24h"
                    style="@style/CardView.TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24h: 19.57"
                    android:padding="6dp"/>

                <TextView
                    android:id="@+id/tv_cripto_7d"
                    style="@style/CardView.TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7d: 151.73"
                    android:padding="6dp"/>
            </LinearLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>
</android.support.v7.widget.ContentFrameLayout>